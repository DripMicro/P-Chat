<% include template/header.ejs %>
<body class="ng-scope pace-done" ng-app="media" ng-controller="mediaCtrl">
<div id="wrapper" class="ng-scope">
    <% include template/left_navigation.ejs %>
    <div id="page-wrapper" class="gray-bg">
        <div class="ng-scope"></div>
            <% include template/top_navigation %>
         <div class="wrapper wrapper-content animated fadeInRight">
            <div class ="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <div class ="row p-t">
                                <div class = "col-md-7"></div>
                                <div class = "col-md-3">
                                    <div class ="col-md-3 p-t">
                                        <label class="label-control" style="font-weight:500"> Status :</label>
                                    </div>
                                    <div class ="col-md-9">
                                        <select id = "selectType" class="form-control m-b">
                                            <option value="0" selected="selected">Standing</option>
                                            <option value="1">Approve</option>
                                            <option value="2">Discard</option>
                                        </select>
                                    </div>
                                </div>
                                <div class = "col-md-2">
                                    <button class= "btn btn-primary block full-width m-b" ng-click = "action()">Action</button>
                                </div>
                            </div>
                            <hr></hr>
                            <div class ="row p-t">
                                <table class="table table-striped table-bordered table-hover " id="editable" >
                                <thead>
                                    <tr>
                                        <th style="text-align:center">CategoryType</th>
                                        <th style="text-align:center">CategoryName</th>
                                        <th style="text-align:center">Title</th>
                                        <th style="text-align:center">PosterName</th>
                                        <th style="text-align:center">PosterDate</th>
                                        <th style="text-align:center">status</th>
                                        <th style="text-align:center">Action</th>
                                    </tr>
                                </thead>
                                <tbody style="text-align:center">
                                    <% datas.forEach(function(data){ %>
                                        <% if(data.isView == 0){ %>
                                            <tr style="background-color:#CBC4C4 ">
                                        <% } else if(data.isView == 1){ %>
                                            <tr style="background-color:#79D2C0 ">
                                        <% } else if (data.isView == 2){%>
                                            <tr style="background-color:#F8AC59 ">
                                        <% } else { %>
                                            <tr style="background-color:#EF5352 ">
                                        <% } %>
                                            <td><%= data.categoryType %></td>
                                            <td><%= data.categoryName %></td>
                                            <td><%= data.title %></td>
                                            <td><%= data.posterName %></td>
                                            <td><%= data.created %></td>
                                            <% if(data.isView == 0){ %>
                                                <td>standing</td>
                                            <% } else if(data.isView == 1){ %>
                                                <td>Approve</td>
                                            <% } else if (data.isView == 2){%>
                                                <td>Discard</td>
                                            <% } else { %>
                                                <td>Block</td>
                                            <% } %>
                                            <td>
                                               <input type="checkbox" class = "chk-action" value="<%=data._id%>"/>
                                            </td>
                                        </tr>                                    
                                    <% }) %>                                    
                                </tbody>
                                <input type="hidden" id='serverData' value='<%=datas%>'/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="ng-scope"></div>
    </div>
</div> 
<% include template/footer.ejs %>
<script src = "admin/js/demo/media.js"></script>
</body>
</html>
