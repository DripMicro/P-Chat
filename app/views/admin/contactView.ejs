<% include template/header.ejs %>

<body>

<div id="wrapper" ng-app="contactApp" ng-controller="contactCtrl">
    <% include template/left_navigation.ejs %>

    <div id="page-wrapper" class="gray-bg">
        <% include template/top_navigation.ejs %>

        <!-- contents -->
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-lg-10">
                <h2 style="font-weight: bold">Contact Manage</h2>
            </div>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class ="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <div class ="row p-t">
                                <div class = "col-md-8"></div>
                                <div class = "col-md-2"></div>
                                <div class = "col-md-2">
                                    <button class= "btn btn-warning block full-width m-b" ng-click = "deleting()">Delete</button>
                                </div>
                            </div>
                            <hr>
                            <div class ="row p-t">
                                <table class="table table-striped table-bordered table-hover " id="editable" >
                                <thead>
                                    <tr>
                                        <th style="text-align:center;width:10%;">Username</th>
                                        <th style="text-align:center;width:15%;">Email</th>
                                        <th style="text-align:center;width:15%;">Message</th>
                                        <th style="text-align:center;width:20%;">Date</th>
                                        <th style="text-align:center;width:5%;">Action</th>
                                    </tr>
                                </thead>
                                <tbody style="text-align:center">
                                    <form>
                                    <% datas.forEach(function(data){ %>
                                        <tr>
                                            <td><%= data.username %></td>
                                            <td><%= data.email %></td>
                                            <td><%= data.message %></td>
                                            <td><%= (new Date(data.created)).toUTCString() %></td>
                                            <td>
                                               <input type="checkbox" class = "chk-action" value="<%=data._id%>"/>
                                            </td>
                                        </tr>                                    
                                    <% }) %>                                    
                                    </form>
                                </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end contents -->
        <!-- footer -->
        <div class="footer">
            <div>
                <strong>Copyright</strong> Media Search Admin Panel &copy; 2017
            </div>
        </div>

        <!-- end footer -->

    </div>
</div>

<% include template/footer.ejs %>
<!-- demo js -->
<script src="admin/js/demo/contact.js"></script>
</body>

</html>
