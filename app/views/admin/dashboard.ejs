<% include template/header.ejs %>

    <body class="ng-scope pace-done"  ng-app="dashboardApp" ng-controller="dashboardCtrl">
        <div id="wrapper" class="ng-scope">
            <% include template/left_navigation.ejs %>
                <div id="page-wrapper" class="gray-bg">
                    <div class="ng-scope"></div>
                    <% include template/top_navigation %>
                        <div class="ng-scope">
                            <!-- contents -->
                            <div class="row wrapper border-bottom white-bg page-heading">
                                <div class="col-lg-10">
                                    <h2 style="font-weight: bold">User Manage</h2>
                                </div>
                            </div>
                            <div class="wrapper wrapper-content animated fadeInRight">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="ibox float-e-margins">
                                            <div class="ibox-content">
                                                <div class="row p-t">
                                                    <div class="col-md-8"></div>
                                                    <div class="col-md-2">
                                                        <a class="btn btn-primary block full-width m-b dropdown-toggle hidden" ng-href="#add" data-toggle="modal" data-hover="dropdown"
                                                            data-delay="0" data-close-others="false">Add</a>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <button class="btn btn-warning block full-width m-b" data-toggle="modal" data-target="#myModal" ng-click="check()">Delete</button>
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row p-t">
                                                    <table class="table table-striped table-bordered table-hover " id="editable">
                                                        <thead>
                                                            <tr>
                                                                <th style="text-align:center;width:5%">avatar</th>
                                                                <th style="text-align:center;width:20%;">UserName</th>
                                                                <th style="text-align:center;width:30%;">Email</th>
                                                                <th style="text-align:center;width:35%;">LoginDate</th>
                                                                <th style="text-align:center;width:5%;">Delete</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody style="text-align:center">
                                                            <form>
                                                                <% datas.forEach(function(user){
                                                                %>
                                                                    <tr>
                                                                        <th style="text-align:center"> <img class="chat-avatar" src="uploads/profile/<%=user._id%>" alt=""></th>
                                                                        <th style="text-align:center">
                                                                            <%= user.userName%>
                                                                        </th>
                                                                        <th style="text-align:center">
                                                                            <%= user.email%>
                                                                        </th>
                                                                        <th style="text-align:center">
                                                                            <%= (new Date(user.createdTime)).toUTCString() %>
                                                                        </th>
                                                                        <th style="text-align:center">
                                                                            <input type="checkbox" class="chk-action" value="<%=user._id%>" />
                                                                        </th>
                                                                    </tr>
                                                                    <% }); %>
                                                            </form>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- end contents -->
                            <!-- footer -->
                            <div class="footer">
                                <div>
                                    <strong>Copyright</strong> Private Chat Admin Panel &copy; 2017
                                </div>
                            </div>
                            <!-- end footer -->

                        </div>
                        <div class="ng-scope"></div>
                </div>
        </div>

        <div class="modal inmodal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 class="modal-title">Confirm</h4>
                    </div>
                    <div class="modal-body">
                        <p>{{content}}</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="deleting()">Ok</button>
                    </div>
                </div>
            </div>
        </div>

        <% include template/footer.ejs %>
            <!-- demo js -->
            <script src="/admin/js/demo/dashboard.js"></script>

    </body>

    </html>