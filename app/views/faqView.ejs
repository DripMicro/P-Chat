<% include template/main_header.ejs %>

<div class="wrapper wrapper-content" ng-app = "myApp" ng-controller = "homeCtrl">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <!--<div class="ibox-title">
                    <h5>Faq</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>-->
                <div class="ibox-content">
                  
                    <!-- end search-->
                    <!-- faq list -->
                    <div class="row faq">
                        <div class="faq-item">
                            <div class="col-md-6 col-md-offset-3">
                                <div class="form-group" style="margin:30px 0;text-align:center;">
                                    <h3>FAQ</h3>
                                </div>
                                <div class="ibox float-e-margins">
                                    <div class="ibox-collapse-content">
                                        <div class="panel-body">
                                            <div class="panel-group" id="accordion">
                                                <% datas.forEach(function(data){ %>
                                                    <div class="panel panel-default">
                                                        <div class="panel-heading">
                                                            <h4 class="panel-title">
                                                                <a data-toggle="collapse" data-parent="#accordion" href="#faq_<%=data._id%>">
                                                                    <%=data.question%>
                                                                </a>
                                                            </h4>
                                                        </div>
                                                        <div id="faq_<%=data._id%>" class="panel-collapse collapse">
                                                            <div class="panel-body">
                                                                <%=data.answer%><br>
                                                                <% if(data.isAttached == true){ %> <img style="max-width:500px; margin-top:10px;" src="/uploads/faqAttach/<%=data.attachName%>"></img>
                                                                                                            <% }%>                                                            
                                                            </div>
                                                        </div>
                                                    </div>
                                                <% }) %> 
                                            </div>
                                        </div>
                                    </div>
                                </div>    
                            </div>    
                            
                    </div>
                    <!-- end faq list -->
                </div>
            </div>
        </div>
    </div>
</div>
<% include template/footer_login.ejs %>
<script src="js/frontend/faq.js"></script>
</body>
</html>
